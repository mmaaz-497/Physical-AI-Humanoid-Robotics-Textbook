# Qdrant Vector Database Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=physical_ai_textbook

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Database Configuration (Optional - for chat logging)
NEON_DATABASE_URL=postgresql://user:password@host/database

# API Configuration
# For production, set this to your frontend URL
# Example: https://your-site.vercel.app
CORS_ORIGINS=http://localhost:3000

# Local Development Only
API_HOST=0.0.0.0
API_PORT=8000

# Retrieval Configuration (Optional - defaults are fine)
SIMILARITY_THRESHOLD=0.6
MAX_TOP_K=10
DEFAULT_TOP_K=5

# Rate Limiting (Optional - defaults are fine)
MAX_QUERY_LENGTH=500
MAX_SELECTION_TEXT_LENGTH=5000
